<Window x:Class="WPF_POS.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_POS"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="username" HorizontalAlignment="Center" Height="42" Margin="0,142,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="308"/>
        <TextBox x:Name="password" HorizontalAlignment="Center" Height="42" Margin="0,217,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="308"/>
        <Label Content="Username::" HorizontalAlignment="Left" Height="39" Margin="143,145,0,0" VerticalAlignment="Top" Width="98"/>
        <Label Content="Password:" HorizontalAlignment="Left" Height="39" Margin="143,217,0,0" VerticalAlignment="Top" Width="98"/>
        <Button Content="Login" HorizontalAlignment="Center" Height="42" Margin="0,305,0,0" VerticalAlignment="Top" Width="280" Click="btnLoginClick"/>
    </Grid>
</Window>
